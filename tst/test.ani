/* begin type testing */

filterOut = [[char\\ inStream, char[] stringToFilterOut --> char\\]] {
        i = [[int\]] <- 0;
        {
                \\inStream [[char\ c]] {
                        (c == stringToFilterOut[i]) ? { // if we have a character match
                                (i+1 == stringToFilterOut.length) ? { // if we've matched the entire string
                                        0<->i; // reset i 
                                } : { // else if we haven't matched the entire string (yet)
                                        \i+1 ->i; // increment i
                                }
                        } : { // else if we have a character mismatch
                                // flow-through the matched characters plus the current one and reset i
                                \\*stringToFilterOut[0::i-1]::\c --> 0<->i;
                        }
                };
        } stringToFilterOut[0::i-1] -->; // flow-through the trailing partial-match
};

/* end type testing */

// Dining philosophers problem

philosopher = [[int id]] {
	chopstick = [[int\]] <- 0;
	leftPhil = [[philosopher]];
	rightPhil = [[philosopher]];
	
	getChopsticks = [[--> int\, int\]] { \leftPhil.chopstick, \rightPhil.chopstick --> };
	returnChopsticks = [[int\ cs1, int\ cs2]] { \cs1 ->leftPhil.chopstick; \cs2 ->rightPhil.chopstick; };
	eat = [[int\ cs1, int\ cs2 --> int\, int\]] {
		"Philosopher " + id + " eating...\n" ->std.out;
		\cs1, \cs2 -->;
	};
	
	loopback => std.rand std.delay \getChopsticks eat ->returnChopsticks loopback;
};

numPhils = 5;

philStream = [[philosopher\\]];
\\[[std.gen]] <- numPhils {
	[[philosopher]] <- {..} ->philStream;
	philStream[..] ->philStream[..].leftPhil;
	philStream[(.. + 1) % numPhils] ->philStream[..].rightPhil;
};

